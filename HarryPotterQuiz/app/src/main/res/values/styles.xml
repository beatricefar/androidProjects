<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/headerMargingTop</item>
        <item name="android:layout_marginBottom">@dimen/headerMarginBottom</item>
    </style>

    <style name="DescriptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/descriptionMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/descriptionMarginBottom</item>
        <item name="android:layout_marginStart">@dimen/descriptionMarginStartEnd</item>
        <item name="android:layout_marginEnd">@dimen/descriptionMarginStartEnd</item>
        <item name="android:textColor">@color/introductionText</item>
        <item name="android:fontFamily">@font/open_sans_b</item>
        <item name="android:textSize">@dimen/descriptionTextSize</item>
    </style>

    <style name="QuizCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/cardMarginTopBottom</item>
        <item name="android:layout_marginBottom">@dimen/cardMarginTopBottom</item>
        <item name="android:layout_marginStart">@dimen/cardMarginStartEnd</item>
        <item name="android:layout_marginEnd">@dimen/cardMarginStartEnd</item>
        <item name="android:padding">@dimen/cardPadding</item>
        <item name="android:background">@drawable/bg_card</item>
    </style>

    <style name="Question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/life_savers_b</item>
        <item name="android:textColor">@color/cardText</item>
        <item name="android:layout_marginTop">@dimen/questionMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/questionMarginBottom</item>
        <item name="android:textSize">@dimen/questionTextSize</item>
    </style>

    <style name="NumberIcon">
        <item name="android:layout_width">@dimen/numberLayout</item>
        <item name="android:layout_height">@dimen/numberLayout</item>
        <item name="android:background">@drawable/number_circle</item>
        <item name="android:textSize">@dimen/numberTextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bgCard</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_r</item>
        <item name="android:textColor">@color/cardText</item>
        <item name="android:textSize">@dimen/radioTextSize</item>
        <item name="android:paddingLeft">@dimen/radioPadding</item>
    </style>

    <style name="NameInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textShortMessage</item>
        <item name="android:fontFamily">@font/open_sans_r</item>
        <item name="android:textColor">@color/cardText</item>
        <item name="android:textSize">@dimen/inputTextSize</item>
    </style>

    <style name="ScoreTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_b</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/scorePaddingTop</item>
        <item name="android:textColor">@color/bgCard</item>
        <item name="android:textSize">@dimen/scoreTextViewSize</item>

    </style>

    <style name="Buttons">
        <item name="android:layout_width">@dimen/buttonWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ScoreMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/scoreMessageMargin</item>
        <item name="android:layout_marginStart">@dimen/scoreMessageMargin</item>
        <item name="android:fontFamily">@font/open_sans_b</item>
        <item name="android:textColor">@color/bgCard</item>
        <item name="android:textSize">@dimen/scoreMessageSize</item>
    </style>

    <style name="Score">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/open_sans_r</item>
        <item name="android:padding">@dimen/scorePadding</item>
        <item name="android:textColor">@color/score</item>
        <item name="android:textSize">@dimen/scoreTextSize</item>
    </style>

</resources>
