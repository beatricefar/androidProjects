<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--App component styles-->
    <style name="Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/logoPaddingTop</item>
        <item name="android:paddingBottom">@dimen/padding</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">@dimen/iconWidth</item>
        <item name="android:layout_height">@dimen/iconWidth</item>
        <item name="android:layout_marginTop">@dimen/iconMarginTopBottom</item>
        <item name="android:layout_marginBottom">@dimen/iconMarginTopBottom</item>
        <item name="android:layout_marginEnd">@dimen/iconMarginEnd</item>
    </style>

    <style name="Information">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/information</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:lineSpacingExtra">@dimen/descriptionLineSpacing</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:paddingTop">@dimen/descriptionPaddingTop</item>
        <item name="android:textColor">@color/information</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="JoinUs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:lineSpacingExtra">@dimen/descriptionLineSpacing</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
